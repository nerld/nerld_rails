<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>My Remote Labs </h1>
    </div>
    <div class="col-md-6">
      <a href="<%= new_remote_lab_path %>" class="btn btn-primary right" id="new-remote-lab-btn">New Remote Lab</a>
    </div>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th width="300">Title</th>
          <th width="150">Type</th>
          <th width="50">Version</th>
          <th width="200">Author</th>
          <th width="200">School</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @remote_labs.each do |remote_lab| %>
          <tr>
            <td><%= remote_lab.title %></td>
            <td><%= remote_lab.lab_type.titleize %></td>
            <td><%= remote_lab.version %></td>
            <td><%= remote_lab.author %></td>
            <td><%= remote_lab.school %></td>
            <td><%= link_to 'Show', remote_lab %></td>
            <td><%= link_to 'Edit', edit_remote_lab_path(remote_lab) %></td>
            <td><%= link_to 'Destroy', remote_lab, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>